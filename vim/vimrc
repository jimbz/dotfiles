set nocompatible

" Vundle
    filetype off                   " required!

    set rtp+=~/.vim/bundle/vundle/
    call vundle#rc()

    " let Vundle manage Vundle
    " required! 
    Bundle 'gmarik/vundle'

    " My Bundles here:
    Bundle 'Align'
    Bundle 'a.vim'
    Bundle 'surround.vim'
    Bundle 'minibufexpl.vim'
    Bundle 'taglist.vim'
    Bundle 'OmniCppComplete'
    Bundle 'vcscommand.vim'
    "Bundle 'vimlatex'
    Bundle 'LaTeX-Box-Team/LaTeX-Box'
    Bundle 'Solarized'
    Bundle 'SudoEdit.vim'
    Bundle 'camelcasemotion'
    Bundle 'pyflakes.vim'
    Bundle 'pydoc.vim'

" Vundle end

filetype plugin indent on

"Change leader from '\' to ,
"let mapleader = ","

" Color scheme and syntax highlighting
set background=dark
colorscheme solarized
syntax on

"Tabs and indent (python style)
set shiftwidth=4
set tabstop=4
set expandtab
set autoindent

"Recursively set the path of the project.
set path=$PWD/**

" From the default configuration file. Commented by default to keep
" compatibility with Vi.
set showcmd        " Show (partial) command in status line.
set showmatch      " Show matching brackets.
set ignorecase     " Do case insensitive matching
set smartcase      " Do smart case matching
set incsearch      " Incremental search
set autowrite      " Automatically save before commands like :next and :make
set autoread       " Automatically update file if changed on disk
set hidden         " Hide buffers when they are abandoned
set mouse=a        " Enable mouse usage (all modes)

set cursorline

" change to directory of current file automatically
":autocmd BufEnter * lcd %:p:h

" Remove the icon bar from the GUI
set guioptions-=T
set guioptions-=m

" Virtual edit in block visual mode
set virtualedit=block

" Wildcard completion menu
set wildmenu
set wildmode=longest,full

" Vertical diff
set diffopt+=vertical

" A.vim configuration
let g:alternateNoDefaultAlternate = 1
" -- CUDA support
let g:alternateExtensions_cu = "h,cuh"
let g:alternateExtensions_h = "cu,c,cpp,cxx,cc,CC"

" Macros
" -- "Underline" with = signs
noremap y= yyp:s/./=/g<enter>
" -- Rebuild ctags database
noremap =t :!ctags -R --langmap=c:+.cu --c++-kinds=+pl --fields=+iaS --extra=+q .<CR>
let tlist_cuda_settings= 'c++;n:namespace;v:variable;d:macro;t:typedef;' .
                             \ 'c:class;g:enum;s:struct;u:union;f:function'
" -- Decrease the number under cursor (C-A is reserved by screen)
nnoremap <C-e> <C-a>
"Automatically close the preview window
"autocmd CursorMovedI * if pumvisible() == 0|pclose|endif
"book (Memoir)autocmd InsertLeave * if pumvisible() == 0|pclose|endif

"LATEX
" IMPORTANT: grep will sometimes skip displaying the file name if you
" search in a singe file. This will confuse Latex-Suite. Set your grep
" program to always generate a file-name.
set grepprg=grep\ -nH\ $*

" VimLatex
" OPTIONAL: Starting with Vim 7, the filetype of empty .tex files defaults to
" 'plaintex' instead of 'tex', which results in vim-latex not being loaded.
" The following changes the default filetype back to 'tex':
let g:tex_flavor='latex'
let g:Tex_DefaultTargetFormat='pdf'
let g:Tex_GotoError=0
" Allow to type "Ã©" with vimlatex
imap <buffer> <leader>it <Plug>Tex_InsertItemOnThisLine

" LaTeX-box
let g:LatexBox_latexmk_options='-pvc'
let g:LatexBox_Folding='yes'

"TagList
let g:Tlist_Exit_OnlyWindow=1
noremap =<CR> :TlistToggle<CR>

" Per-directory vimrc
set exrc
set secure

" Auto close preview window
autocmd InsertLeave * if pumvisible() == 0|pclose|endif

" Search errors in quickfix window
nmap gb :copen<CR>/error:<CR>

" GCC Compiler
compiler! gcc

" Remembers 100 lines of commands history
set history=100
